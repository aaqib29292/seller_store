<% order_items.each do |order| %>
      <li class="list-group-item" id="list-item">
        <% if order.status != 1 %>
          <%= link_to fa_icon('arrow-left'), order_path(order, status: order.status - 1), method: :patch, class: "pull-left", remote: true %>
          <span class="pull-left">&nbsp;&nbsp;</span>
        <% end %>
        <span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
        <%= link_to "Order.id: #{order.id}", "#", { class: 'tooltips btn btn-sm btn-info', title: 'Hooray! Aaqib', data: { toggle: 'tooltip', placement: 'left'} } %>
        <% if order.status != 4 %>
          <% if order.status == 2  %>
            <%= link_to fa_icon('arrow-right'), transport_path(order), class: "pull-right", remote: true %>
          <% else %>
            <%= link_to fa_icon('arrow-right'), order_path(order, status: order.status + 1), method: :patch, class: "pull-right", remote: true %>
          <% end %>
          <span class="pull-right">&nbsp;&nbsp;</span>
        <% end %>
      </li>
<% end %>
